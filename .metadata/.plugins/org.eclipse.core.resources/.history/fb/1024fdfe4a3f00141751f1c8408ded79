
public class bucles {

	public static void main(String[] args) {
		// bucles (while / for) 
		int cont = 0;
		while (cont <10){
			System.out.println("hola "+cont);
			cont = cont +1; // esto es lo mismo cont++;
		}
		for (int i=0; i<10;i++){
			System.out.println(i + " adios");
		}
		// do while
		do {
			System.out.println(cont + " hola");
			cont++;
		}while (cont <10);
	}
}
