package variables;

public class main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
// tipos de variables
		int numero = 999999999; //el tipo int (integer) almacena números enteros de -2,147.483,648 a 2,147,483,647 y pico) usa 4 bytes
		char caracter = 'c'; //el tipo char (caracter) almacena un carácter. comillas dobles = string. comillas simples
		String cadena = "hola"; // el tipo String (cadena) almacena una cadena de texto.
		long numeroLargo = 2344234; //almacena numeros enteros. utiliza 8 bytes. -9223372036854775808 a 9223372036854775807
		short numerocorto = 32767; //almacenan nýumeros enteros. Mínimo = -32768 / El máximo es el 32767. Para un short reserva 2 bytes
		
// NYUMERIOS DECIMALES
	//3.4e-038 to 3.4e+038
		float comaFlotante = (float)3.5; // (float) delante del número te hace un casting, convirtiendo el número decimal en el tipo que se le indica
		double doblePrecision = (double)3.5;
		
		
		// BOOLEANOS sólo puede tener 1 de 2 valores (0 /1 ) 
		boolean cierto = false; 

	}
}
